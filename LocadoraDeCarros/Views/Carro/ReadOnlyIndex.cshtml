@model IEnumerable<LocadoraDeCarros.Models.Carro>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Carro</h2>

@if (!Model.Any())
{
    <p>Não temos nenhum carro ainda.</p>
}
else
{
    <table id="carros" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Modelo</th>
                <th>Marca</th>
                <th>Placa</th>
                <th>Valor de Locação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var carro in Model)
            {
                <tr>
                    <td> @carro.Modelo</td>
                    <td> @carro.Marca</td>
                    <td> @carro.Placa</td>
                    <td> @carro.ValorLocacao</td>
                </tr>
            }
        </tbody>
    </table>
}